<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="fill_parent"
    android:background="#3e4044" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/id_tab_item_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/app_name"
            android:visibility="visible" />

        <TextView
            android:id="@+id/id_tab_item_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tab_item_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/id_tab_item_indicate"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/id_tab_item_icon"
            android:layout_toRightOf="@+id/id_tab_item_icon"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/tab_update_hint"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>